<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="repetitionHBox"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.softwareengineeringproject.Controller.RepetitionController"
      stylesheets="@style.css"
      spacing="40"
      alignment="TOP_CENTER"
      >
    
    <VBox stylesheets="@style.css" alignment="CENTER">
        <Label text="Repetition?" styleClass="section-label"/>
        <HBox stylesheets="@style.css" alignment="CENTER">
            <RadioButton fx:id="yesRadio" mnemonicParsing="false" text="Yes" onAction="#handleYesSelected">
                <toggleGroup>
                    <ToggleGroup fx:id="repetitionGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="noRadio" mnemonicParsing="false" text="No" toggleGroup="$repetitionGroup" onAction="#handleNoSelected" selected="true" />
        </HBox>
    </VBox>
    
    <!-- This section is showed only when yes is selected -->
    <VBox fx:id="repetitionInputContainer" managed="false" visible="false" stylesheets="@style.css" alignment="CENTER">
        
        <HBox stylesheets="@style.css" alignment="CENTER" spacing="20">
            <Label text="Sleep Period (D:H:M:S):" styleClass="section-label"/>
            <Spinner fx:id="daySpinner"/>
            <Spinner fx:id="hourSpinner"/>
            <Spinner fx:id="minuteSpinner"/>
            <Spinner fx:id="secondSpinner"/>
        </HBox>
        
        <HBox stylesheets="@style.css" alignment="CENTER" spacing="20">
            <Label text="Max Repetitions:" styleClass="section-label"/>
            <Spinner fx:id="repetition"/>
        </HBox>
    </VBox>
    
</VBox>